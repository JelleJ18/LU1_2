extends ../layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-4
        h2.text-center.mb-4 Login
        if error
          .alert.alert-danger= error
        form(method="POST", action="/auth/login")
          .mb-3
            label.form-label(for="email") Email address
            input.form-control(type="email", id="email", name="email", required, placeholder="Type emailaddress")
          .mb-3
            label.form-label(for="password") Password
            input.form-control(type="password", id="password", name="password", required, placeholder="Type password")
          button.btn.btn-primary.w-100(type="submit") Login