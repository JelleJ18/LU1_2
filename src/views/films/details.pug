extends ../layout

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.shadow.mb-4
          .card-header.bg-primary.text-white.text-center
            h4.mb-0= film.title
          .card-body
            p.mb-1
              strong Year:
              |  #{film.release_year}
            p.mb-1
              strong Description:
              |  #{film.description}
            hr
            h5 Actors
            ul
              each actor in actors
                li #{actor.first_name} #{actor.last_name}