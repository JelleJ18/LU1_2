extends ../layout

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.shadow.mb-4
          .card-header.bg-primary.text-white.text-center
            h4.mb-0 Account creation
          .card-body
            if error
              .alert.alert-danger= error
            form(method='POST', action='/users/register')
              .mb-3
                label.form-label(for="firstName") First name
                input.form-control(type="text", name="firstName", required)
              .mb-3
                label.form-label(for="lastName") Last name
                input.form-control(type="text", name="lastName", required)
              .mb-3
                label.form-label(for="email") E-mail
                input.form-control(type="email", name="email", required)
              .mb-3
                label.form-label(for="password") Password
                input.form-control(type="password", name="password", required)
              button.btn.btn-primary(type="submit") Register