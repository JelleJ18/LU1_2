extends ../layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-4
        h2.text-center.mb-4 Register
        if error
          .alert.alert-danger= error
        form(method='POST', action='/users/register')
          .mb-3
            label.form-label(for="firstName") First name
            input.form-control(type="text", name="firstName", id="firstName", required, placeholder="Enter your first name")
          .mb-3
            label.form-label(for="lastName") Last name
            input.form-control(type="text", name="lastName", id="lastName", required, placeholder="Enter your last name")
          .mb-3
            label.form-label(for="email") E-mail
            input.form-control(type="email", name="email", id="email", required, placeholder="Enter your e-mail")
          .mb-3
            label.form-label(for="password") Password
            input.form-control(type="password", name="password", id="password", required, placeholder="Enter your password")
          button.btn.btn-primary.w-100(type="submit") Register
        .mt-3.text-center
          a(href="/auth/login") Already have an account? Login here!